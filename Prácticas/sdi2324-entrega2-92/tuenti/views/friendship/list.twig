{% extends "layout.twig" %}
{% block title %}Listado de Amigos{% endblock %}
{% block main_container %}
    <h2>Mis Amigos</h2>
    {% include '../error.twig' %}
    {% include '../succes.twig' %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Email</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Fecha de amistad</th>
            <th>Última publicación</th>
        </tr>
        </thead>
        <tbody>
        {% for friend in friendships %}
            <tr class="friends-list">
                <td><a class="friend-email" href="/profile/{{ friend._id }}">{{ friend.email }}</a></td>
                <td class="friend-name">{{ friend.name }}</td>
                <td>{{ friend.surname }}</td>
                <td class="friendship-date">{{ friend.friendshipDate }}</td>
                <td class="last-post">{{ friend.lastPost }}</td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Paginación -->
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class ="row text-center">
        <ul class ="pagination">
            {% for page in pages %}
                <li class="page-item {% if page.number == currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ page.url }}">{{ page.number }}</a>
                </li>
            {% endfor %}

        </ul>
    </div>
{% endblock %}
